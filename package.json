{
  "name": "k8ss",
  "version": "1.0.0",
  "description": "k8s switcher",
  "main": "libe/index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "start": "ts-node src/index.ts switch --cluster=hello --namespace=world",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint --fix -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jeff-Tian/k8ss.git"
  },
  "keywords": [
    "k8s",
    "kubernetes"
  ],
  "author": "jeff.tian@outlook.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Jeff-Tian/k8ss/issues"
  },
  "homepage": "https://github.com/Jeff-Tian/k8ss#readme",
  "dependencies": {
    "shelljs": "^0.8.3",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/rimraf": "^2.0.2",
    "@types/shelljs": "^0.8.5",
    "@types/yargs": "^13.0.0",
    "coffee": "^5.2.1",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "typescript": "^3.4.5"
  }
}
